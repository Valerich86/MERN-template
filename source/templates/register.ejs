<%- include('includes/header.ejs') %>
    <h1>Регистрация</h1>
    <form action="/register" method="post">
       <label>Имя пользователя</label>
       <input name="username" value="<%= body.username || '' %>">
       <% if (errors.username) {%>
            <div><span class="label error">
                <%= errors.username.msg %>
            </span></div>
        <% } %>
        <label>Пароль</label>
        <input name="password" type="password" value="<%= body.password || '' %>">
        <% if (errors.password) {%>
            <div><span class="label error">
                <%= errors.password.msg %>
            </span></div>
        <% } %>
        <label>Повторите пароль</label>
        <input name="password2" type="password" value="<%= body.password2 || '' %>">
        <% if (errors.password2) {%>
            <div><span class="label error">
                <%= errors.password2.msg %>
            </span></div>
        <% } %>
        <div class="horizontal">
            <input type="submit" value="Зарегистрировать">
        </div>
    </form>
<%- include('includes/footer.ejs') %>